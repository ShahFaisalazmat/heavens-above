name: Dependency Updates

on:
  pull_request:
    paths:
      - 'requirements.txt'
      - 'package.json'

jobs:
  test-dependencies:
    runs-on: ubuntu-latest
    
    steps:
    - name: Checkout code
      uses: actions/checkout@v4
      
    - name: Set up Python
      uses: actions/setup-python@v4
      with:
        python-version: '3.9'
        
    - name: Test with updated dependencies
      run: |
        pip install -r requirements.txt
        python -m pytest tests/ -v
